<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appita" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themePrimary</item>
        <item name="colorPrimaryVariant">@color/backgroundLayoutColorDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themePrimary</item>
        <item name="colorSecondaryVariant">@color/themePrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="background_color">@color/backgroundColorDark</item>
        <item name="layout_color">@color/backgroundLayoutColorDark</item>
        <item name="text_color">@color/textColorDark</item>
        <item name="sub_text_color">@color/subTextColorDark</item>
        <item name="bottom_navigation_color">@color/backgroundLayoutColorDark</item>
        <item name="fontFamily">@font/kumbh_sans</item>
    </style>
</resources>