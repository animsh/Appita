<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Appita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themePrimary</item>
        <item name="colorPrimaryVariant">@color/themePrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themePrimary</item>
        <item name="colorSecondaryVariant">@color/themePrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="background_color">@color/backgroundColorLight</item>
        <item name="layout_color">@color/backgroundLayoutColorLight</item>
        <item name="text_color">@color/textColorLight</item>
        <item name="sub_text_color">@color/subTextColorLight</item>
        <item name="bottom_navigation_color">@color/backgroundLayoutColorLight</item>
        <item name="fontFamily">@font/gilroy</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottom_sheet_background">@color/lightGray</item>
        <item name="search_color">#EFEFEF</item>
        <item name="blur_background_color">#1FFF</item>
        <item name="blur_icon_tint_color">#FFFFFF</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconSize">18dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

</resources>